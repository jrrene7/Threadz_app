<!DOCTYPE html>
<html>
  <head>
    <title>Threadz</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application' %>
    <%= javascript_include_tag 'application'%>
  </head>

  <body class="align">


      <header>
          <h1 class="title">ThreadZ </h1>
           <h2> "Styling made easy" </h2>
      </header>
    <main>

    <% if @logged_in %>
  <aside class="left" id="sidebar">
    <h3><%= link_to("Outfits", outfits_path) %></h3> <br>
    <h3> <%= link_to("New Outfit", new_outfit_path) %></h3> <br>
    <h3><%= link_to("Clothes", clothings_path) %></h3> <br>
    <h3><%= link_to("Add Clothes", new_clothing_path) %></h3> <br>
    <!-- <h3><%= link_to("Users", users_path) %></h3> <br> -->
    <h3><%= link_to("Logout", logout_path, method: "delete") %></h3> <br>
  </aside>
    <% else %>
  <aside class="right">
    <p> Already have an account ? <%= link_to("Log In", login_path) %> </p>
    <p>Dont have an account? <%= link_to("Sign Up", signup_path) %></p>
  </aside>
<% end %>

<article class="">

    <%= yield %>

</article>

</main>

  </body>
</html>
