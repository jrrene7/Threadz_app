<%= form_for(user, :html => {:class => "form"}) do |f| %>
  <div class="form-input">
      <%= f.label :name %>
      <%= f.text_field :name %>
  </div>
  <div class="form-input">
      <%= f.label :user %>
      <%= f.select(:user_id) do %>
      <% @users.each do |user| %>
      <%= content_tag(:option, user.name, value: user.id) %>
      <% end %>
      <% end %>
  </div>
  <div class="form-input">
      <%= f.label :email %>
      <%= f.text_field :email %>
  </div>
  <!-- <div>
      <%= f.label :image %>
      <%= f.image_tag :image %>
  </div> -->

  <p> <%= link_to("New User.", new_user_path) %></p>

  <%= f.submit %>
<% end %>
